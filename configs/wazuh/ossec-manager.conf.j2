<!--
  Enhanced Wazuh Manager Configuration Template for SOC Lab
  Generated by Ansible for SOC Lab Environment
  Manager IP: {{ wazuh_manager_ip }}
  Optimized for 6GB RAM deployment with enterprise-grade security monitoring
-->

<ossec_config>
  <global>
    <jsonout_output>yes</jsonout_output>
    <alerts_log>yes</alerts_log>
    <logall>no</logall>
    <logall_json>yes</logall_json>
    <email_notification>no</email_notification>
    <smtp_server>localhost</smtp_server>
    <email_from>wazuh@{{ lab.domain }}</email_from>
    <email_to>admin@{{ lab.domain }}</email_to>
    <hostname>{{ inventory_hostname }}</hostname>
    <stats>8</stats>
    <memory_size>1024</memory_size>
    <white_list>127.0.0.1</white_list>
    <white_list>^localhost.localdomain$</white_list>
    <white_list>{{ wazuh_manager_ip }}</white_list>
{% for network in networks.values() %}
    <white_list>{{ network.cidr }}</white_list>
{% endfor %}
  </global>

  <alerts>
    <log_alert_level>3</log_alert_level>
    <email_alert_level>12</email_alert_level>
    <use_geoip>yes</use_geoip>
  </alerts>

  <!-- Enhanced logging configuration -->
  <logging>
    <log_format>plain</log_format>
  </logging>

  <!-- Agent communication configuration -->
  <remote>
    <connection>secure</connection>
    <port>{{ wazuh_manager_port }}</port>
    <protocol>tcp</protocol>
    <queue_size>131072</queue_size>
    <rids_closing_time>300</rids_closing_time>
  </remote>

  <!-- Enhanced remote syslog configuration for pfSense and network devices -->
  <remote>
    <connection>syslog</connection>
    <port>514</port>
    <protocol>udp</protocol>
    <allowed-ips>{{ networks.management.cidr }}</allowed-ips>
    <local_ip>{{ wazuh_manager_ip }}</local_ip>
  </remote>

  <!-- Additional syslog for DMZ and Internal networks -->
  <remote>
    <connection>syslog</connection>
    <port>515</port>
    <protocol>tcp</protocol>
    <allowed-ips>{{ networks.dmz.cidr }},{{ networks.internal.cidr }}</allowed-ips>
    <local_ip>{{ wazuh_manager_ip }}</local_ip>
  </remote>

  <!-- Enhanced policy monitoring -->
  <rootcheck>
    <disabled>no</disabled>
    <check_files>yes</check_files>
    <check_trojans>yes</check_trojans>
    <check_dev>yes</check_dev>
    <check_sys>yes</check_sys>
    <check_pids>yes</check_pids>
    <check_ports>yes</check_ports>
    <check_if>yes</check_if>
    <frequency>21600</frequency> <!-- 6 hours for lab environment -->
    <rootkit_files>/var/ossec/etc/rootcheck/rootkit_files.txt</rootkit_files>
    <rootkit_trojans>/var/ossec/etc/rootcheck/rootkit_trojans.txt</rootkit_trojans>
    <system_audit>/var/ossec/etc/rootcheck/system_audit_rcl.txt</system_audit>
    <system_audit>/var/ossec/etc/rootcheck/system_audit_ssh.txt</system_audit>
    <system_audit>/var/ossec/etc/rootcheck/cis_debian_linux_rcl.txt</system_audit>
    <system_audit>/var/ossec/etc/rootcheck/cis_rhel_linux_rcl.txt</system_audit>
    <system_audit>/var/ossec/etc/rootcheck/cis_rhel5_linux_rcl.txt</system_audit>
    <system_audit>/var/ossec/etc/rootcheck/win_audit_rcl.txt</system_audit>
    <system_audit>/var/ossec/etc/rootcheck/win_applications_rcl.txt</system_audit>
    <system_audit>/var/ossec/etc/rootcheck/win_malware_rcl.txt</system_audit>
  </rootcheck>

  <!-- CIS-CAT integration for compliance scanning -->
  <wodle name="cis-cat">
    <disabled>yes</disabled>
    <timeout>1800</timeout>
    <interval>1d</interval>
    <scan-on-start>yes</scan-on-start>
    <java_path>wodles/java</java_path>
    <ciscat_path>wodles/ciscat</ciscat_path>
  </wodle>

  <!-- Osquery integration for advanced system monitoring -->
  <wodle name="osquery">
    <disabled>yes</disabled>
    <run_daemon>yes</run_daemon>
    <log_path>/var/log/osquery/osqueryd.results.log</log_path>
    <config_path>/etc/osquery/osquery.conf</config_path>
    <add_labels>yes</add_labels>
  </wodle>

  <!-- Enhanced system inventory collection -->
  <wodle name="syscollector">
    <disabled>no</disabled>
    <interval>1h</interval>
    <scan_on_start>yes</scan_on_start>
    <hardware>yes</hardware>
    <os>yes</os>
    <network>yes</network>
    <packages>yes</packages>
    <ports all="no">yes</ports>
    <processes>yes</processes>
    <hotfixes>yes</hotfixes>

    <!-- Database synchronization settings optimized for lab -->
    <synchronization>
      <max_eps>10</max_eps>
    </synchronization>
  </wodle>

  <!-- Enhanced vulnerability detection -->
  <wodle name="vulnerability-detector">
    <disabled>no</disabled>
    <interval>5m</interval>
    <min_full_scan_interval>6h</min_full_scan_interval>
    <run_on_start>yes</run_on_start>

    <!-- Ubuntu OS vulnerabilities -->
    <provider name="canonical">
      <enabled>yes</enabled>
      <os>trusty</os>
      <os>xenial</os>
      <os>bionic</os>
      <os>focal</os>
      <os>jammy</os>
      <update_interval>1h</update_interval>
    </provider>

    <!-- RedHat OS vulnerabilities -->
    <provider name="redhat">
      <enabled>yes</enabled>
      <os>5</os>
      <os>6</os>
      <os>7</os>
      <os>8</os>
      <os>9</os>
      <update_interval>1h</update_interval>
    </provider>

    <!-- Windows OS vulnerabilities -->
    <provider name="msu">
      <enabled>yes</enabled>
      <update_interval>1h</update_interval>
    </provider>

    <!-- Aggregate vulnerabilities -->
    <provider name="nvd">
      <enabled>yes</enabled>
      <update_interval>1h</update_interval>
    </provider>
  </wodle>

  <!-- Enhanced file integrity monitoring -->
  <syscheck>
    <disabled>no</disabled>
    <frequency>21600</frequency> <!-- 6 hours for lab environment -->
    <scan_on_start>yes</scan_on_start>
    <auto_ignore frequency="10" timeframe="3600">no</auto_ignore>
    <alert_new_files>yes</alert_new_files>
    <remove_old_diff>yes</remove_old_diff>

    <!-- Critical system directories -->
    <directories check_all="yes" realtime="yes" report_changes="yes">/etc</directories>
    <directories check_all="yes" realtime="yes">/usr/bin,/usr/sbin</directories>
    <directories check_all="yes" realtime="yes">/bin,/sbin</directories>
    <directories check_all="yes">/boot</directories>
    
    <!-- Web application directories -->
    <directories check_all="yes" realtime="yes" report_changes="yes">/var/www</directories>
    <directories check_all="yes" realtime="yes" report_changes="yes">/opt/dvwa</directories>
    
    <!-- Database directories -->
    <directories check_all="yes" realtime="yes" report_changes="yes">/var/lib/mysql</directories>
    
    <!-- Log directories -->
    <directories check_all="yes" realtime="no">/var/log</directories>

    <!-- Files/directories to ignore -->
    <ignore>/etc/mtab</ignore>
    <ignore>/etc/hosts.deny</ignore>
    <ignore>/etc/mail/statistics</ignore>
    <ignore>/etc/random-seed</ignore>
    <ignore>/etc/random.seed</ignore>
    <ignore>/etc/adjtime</ignore>
    <ignore>/etc/httpd/logs</ignore>
    <ignore>/etc/utmpx</ignore>
    <ignore>/etc/wtmpx</ignore>
    <ignore>/etc/cups/certs</ignore>
    <ignore>/etc/dumpdates</ignore>
    <ignore>/etc/svc/volatile</ignore>
    <ignore>/var/log/wtmp</ignore>
    <ignore>/var/log/utmp</ignore>
    <ignore>/var/log/btmp</ignore>

    <!-- Check the file, but never compute the diff -->
    <nodiff>/etc/ssl/private.key</nodiff>
    <nodiff>/etc/passwd</nodiff>
    <nodiff>/etc/shadow</nodiff>
    <nodiff>/etc/gshadow</nodiff>

    <skip_nfs>yes</skip_nfs>
    <skip_dev>yes</skip_dev>
    <skip_proc>yes</skip_proc>
    <skip_sys>yes</skip_sys>

    <!-- Nice value for Syscheck process -->
    <process_priority>10</process_priority>

    <!-- Maximum output throughput -->
    <max_eps>50</max_eps>

    <!-- Database synchronization settings -->
    <synchronization>
      <enabled>yes</enabled>
      <interval>5m</interval>
      <max_interval>1h</max_interval>
      <max_eps>10</max_eps>
    </synchronization>
  </syscheck>

  <!-- Enhanced active response commands -->
  <command>
    <name>disable-account</name>
    <executable>disable-account</executable>
    <timeout_allowed>yes</timeout_allowed>
  </command>

  <command>
    <name>restart-wazuh</name>
    <executable>restart-wazuh</executable>
  </command>

  <command>
    <name>firewall-drop</name>
    <executable>firewall-drop</executable>
    <timeout_allowed>yes</timeout_allowed>
  </command>

  <command>
    <name>host-deny</name>
    <executable>host-deny</executable>
    <timeout_allowed>yes</timeout_allowed>
  </command>

  <command>
    <name>route-null</name>
    <executable>route-null</executable>
    <timeout_allowed>yes</timeout_allowed>
  </command>

  <command>
    <name>win_route-null</name>
    <executable>route-null.exe</executable>
    <timeout_allowed>yes</timeout_allowed>
  </command>

  <command>
    <name>netsh</name>
    <executable>netsh.exe</executable>
    <timeout_allowed>yes</timeout_allowed>
  </command>

  <command>
    <name>restart-service</name>
    <executable>restart-service</executable>
    <timeout_allowed>yes</timeout_allowed>
  </command>

  <!-- Enhanced active response rules -->
  <!-- SSH brute force protection -->
  <active-response>
    <disabled>no</disabled>
    <command>firewall-drop</command>
    <location>local</location>
    <rules_id>5720</rules_id>
    <timeout>600</timeout>
  </active-response>

  <!-- Multiple authentication failures -->
  <active-response>
    <disabled>no</disabled>
    <command>host-deny</command>
    <location>local</location>
    <rules_id>5712</rules_id>
    <timeout>600</timeout>
  </active-response>

  <!-- Web attack protection -->
  <active-response>
    <disabled>no</disabled>
    <command>firewall-drop</command>
    <location>local</location>
    <rules_id>31100,31101,31102,31103,31104,31105,31106</rules_id>
    <timeout>1800</timeout>
  </active-response>

  <!-- Malware detection response -->
  <active-response>
    <disabled>no</disabled>
    <command>host-deny</command>
    <location>local</location>
    <rules_id>52501,52502,52503,52504,52505</rules_id>
    <timeout>86400</timeout>
  </active-response>

  <!-- Enhanced log analysis commands -->
  <localfile>
    <log_format>command</log_format>
    <command>df -P</command>
    <frequency>360</frequency>
    <alias>disk-space</alias>
  </localfile>

  <localfile>
    <log_format>full_command</log_format>
    <command>netstat -tulpn | sed 's/\([[:alnum:]]\+\)\ \+[[:digit:]]\+\ \+[[:digit:]]\+\ \+\(.*\):\([[:digit:]]*\)\ \+\([0-9\.\:\*]\+\).\+\ \([[:digit:]]*\/[[:alnum:]\-]*\).*/\1 \2 \3 \4 \5/' | sort -k 4 -g | sed 's/.*:\([[:digit:]]*\)\ \(.*\)/\1 \2/'</command>
    <alias>netstat listening ports</alias>
    <frequency>360</frequency>
  </localfile>

  <localfile>
    <log_format>full_command</log_format>
    <command>last -n 20</command>
    <frequency>360</frequency>
    <alias>last-logins</alias>
  </localfile>

  <localfile>
    <log_format>command</log_format>
    <command>ps aux --sort=-%cpu | head -10</command>
    <frequency>300</frequency>
    <alias>top-processes-cpu</alias>
  </localfile>

  <localfile>
    <log_format>command</log_format>
    <command>ps aux --sort=-%mem | head -10</command>
    <frequency>300</frequency>
    <alias>top-processes-memory</alias>
  </localfile>

  <!-- Enhanced integration with external APIs -->
  <integration>
    <name>virustotal</name>
    <api_key>API_KEY</api_key> <!-- Replace with actual API key -->
    <rule_id>87105</rule_id>
    <alert_format>json</alert_format>
  </integration>

  <integration>
    <name>slack</name>
    <hook_url>SLACK_WEBHOOK_URL</hook_url> <!-- Replace with actual webhook -->
    <rule_id>100001,100002,100003</rule_id>
    <alert_format>json</alert_format>
  </integration>

  <!-- Enhanced syslog output -->
  <syslog_output>
    <level>9</level>
    <server>{{ wazuh_manager_ip }}</server>
    <port>514</port>
    <format>default</format>
  </syslog_output>

  <!-- Include custom rules -->
  <include>rules/custom/web_attacks.xml</include>
  <include>rules/custom/brute_force.xml</include>
  <include>rules/custom/malware_detection.xml</include>
  <include>rules/custom/network_anomalies.xml</include>
  <include>rules/custom/compliance_monitoring.xml</include>

  <!-- Include custom decoders -->
  <include>decoders/custom/web_decoders.xml</include>
  <include>decoders/custom/network_decoders.xml</include>
  <include>decoders/custom/application_decoders.xml</include>

  <!-- Enhanced cluster configuration (disabled for single-node lab) -->
  <cluster>
    <name>wazuh-soc-lab</name>
    <node_name>{{ inventory_hostname }}</node_name>
    <node_type>master</node_type>
    <key>{{ wazuh_cluster_key | default('c98b62a9b6169ac5f67dae55ae4a9088') }}</key>
    <port>{{ wazuh_manager.cluster_port }}</port>
    <bind_addr>{{ wazuh_manager_ip }}</bind_addr>
    <nodes>
        <node>{{ wazuh_manager_ip }}</node>
    </nodes>
    <hidden>no</hidden>
    <disabled>yes</disabled>
  </cluster>

  <!-- Enhanced agent configuration -->
  <auth>
    <disabled>no</disabled>
    <port>{{ wazuh_manager.registration_port }}</port>
    <use_source_ip>no</use_source_ip>
    <purge>yes</purge>
    <use_password>yes</use_password>
    <ciphers>HIGH:!ADH:!EXP:!MD5:!RC4:!3DES:!CAMELLIA:@STRENGTH</ciphers>
    <ssl_agent_ca>/var/ossec/etc/sslmanager.cert</ssl_agent_ca>
    <ssl_verify_host>no</ssl_verify_host>
    <ssl_manager_cert>/var/ossec/etc/sslmanager.cert</ssl_manager_cert>
    <ssl_manager_key>/var/ossec/etc/sslmanager.key</ssl_manager_key>
    <ssl_auto_negotiate>no</ssl_auto_negotiate>
  </auth>

  <!-- Enhanced reports configuration -->
  <reports>
    <category>syscheck</category>
    <title>Daily report: File changes</title>
    <email_to>admin@{{ lab.domain }}</email_to>
    <location>/var/ossec/logs/alerts/alerts.log</location>
    <rule>554</rule>
    <frequency>daily</frequency>
  </reports>

  <reports>
    <category>rootcheck</category>
    <title>Daily report: Rootcheck</title>
    <email_to>admin@{{ lab.domain }}</email_to>
    <location>/var/ossec/logs/alerts/alerts.log</location>
    <rule>510</rule>
    <frequency>daily</frequency>
  </reports>

  <!-- Enhanced database output for indexing -->
  <database_output>
    <hostname>{{ wazuh_manager_ip }}</hostname>
    <username>wazuh</username>
    <password>wazuh_password</password>
    <database>wazuh</database>
    <type>mysql</type>
  </database_output>

</ossec_config>